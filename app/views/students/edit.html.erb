<%provide(:title, 'Update my information')%>
   <%= render 'layouts/navbarStudents'%>

<%= render 'shared/error_messages' %>
<h1>Update your profile</h1>

<div class ="row">
	<div class="col-md-6">

		<div class="form-group">
			<%= form_for(@student, :html => {:class => "form-horizontal"}) do |f| %>

			<%=f.label :year, "Year", :class => "control-label" %>
			<%=f.text_field :year, :placeholder => "1/2/3/4/New Grad", :class => "form-control input-md"%>

			<%=f.label :email, "Email", :class => "control-label" %>
			<%=f.text_field :email, :placeholder => "Email", :class => "form-control input-md"%>

			<%=f.label :password, "Password", :class => "control-label" %>
			<%=f.password_field :password, :placeholder => "Password", :class => "form-control input-md"%>

			<%=f.label :password_confirmation, "Password Confirmation", :class => "control-label" %>
			<%=f.password_field :password_confirmation, :placeholder => "Confim Password", :class => "form-control input-md"%>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<%end%>

		</div>
	</div>

</div>