<%provide(:title, 'Sign up')%>
   <%= render 'layouts/landingNavbarStudents'%>


<h1>Student Signup</h1>
<%= render 'shared/error_messages' %>

<div class ="row">
	<div class="form-group">
		<%= form_for(@student, :html => {:class => "form-horizontal"}) do |f| %>
		<div class="col-md-6">
		<h4>Basic Information</h4>

			<%=f.label :fname, "First Name", :class => "control-label" %>
			<%=f.text_field :fname, :placeholder => "First Name", :class => "form-control input-md"%>

			<%=f.label :lname, "Last Name", :class => "control-label" %>
			<%=f.text_field :lname, :placeholder => "Last Name", :class => "form-control input-md"%>

		</div>
	
		<div class="col-md-6">
		<h4>Account Information</h4>

			<%=f.label :email, "Email", :class => "control-label" %>
			<%=f.text_field :email, :placeholder => "Email", :class => "form-control input-md"%>

			<%=f.label :password, "Password", :class => "control-label" %>
			<%=f.password_field :password, :placeholder => "Password", :class => "form-control input-md"%>

			<%=f.label :password_confirmation, "Password Confirmation", :class => "control-label" %>
			<%=f.password_field :password_confirmation, :placeholder => "Confim Password", :class => "form-control input-md"%>
			<br><br><br><br><br>
			<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		</div>
		<%end%>
	</div>
</div>


